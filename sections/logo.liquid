{%- liquid
  assign border = section.settings.border
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign bg_color = section.settings.background-color
  assign logo = section.settings.logo
  assign logo_alignment = section.settings.logo-alignment
  assign logo_full_width = section.settings.logo-full-width
  assign logo_width = section.settings.logo-width
  assign mobile_spacing_above = section.settings.mobile-spacing-above
  assign mobile_spacing_below = section.settings.mobile-spacing-below

  assign logo_width = section.settings.logo-width | append: 'px'
  assign sizes = '(max-width: 767px) calc(100vw - 32px), ' | append: logo_width
  if logo_full_width
    assign logo_width = '100%'
    assign sizes = '(max-width: 767px) calc(100vw - 32px), calc(100vw - 96px)'
  endif
-%}

<div
  class="logo--root"
  data-section-id="{{ section.id }}"
  data-background-color="{{ bg_color }}"
  data-border="{{ border }}"
  data-container-width="5"
  data-mobile-spacing-above="{{ mobile_spacing_above }}"
  data-mobile-spacing-below="{{ mobile_spacing_below }}"
  data-spacing-above="{{ spacing_above }}"
  data-spacing-below="{{ spacing_below }}"
  style="--alignment:{{ logo_alignment }};--max-width:{{ logo_width }};"
>
  <div class="logo--wrapper">
    {%- liquid
      if logo
        echo logo | image_url: width: logo.width | image_tag: alt: logo.alt, loading: 'lazy', sizes: sizes
      else
        render 'placeholder', type: 'logo', aspect_ratio: 3
      endif
    -%}
  </div>
</div>

