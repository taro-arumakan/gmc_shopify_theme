{%- liquid
  assign bg_color = section.settings.background-color
  assign border = section.settings.border
  assign container_width = section.settings.container-width
  assign max_products = 4
  assign mobile_spacing_above = section.settings.mobile-spacing-above
  assign mobile_spacing_below = section.settings.mobile-spacing-below
  assign title = section.settings.title
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign white_text = section.settings.white-text

  assign loading = 'lazy'
  if section.index == 1
    assign loading = 'eager'
  endif
-%}

<product-recommendations-element
  class="related-products--root"
  data-section-id="{{ section.id }}"
  data-background-color="{{ bg_color }}"
  data-border="{{ border }}"
  data-container-width="{{ container_width }}"
  data-intent="related"
  data-max-products="{{ max_products }}"
  data-mobile-spacing-above="{{ mobile_spacing_above }}"
  data-mobile-spacing-below="{{ mobile_spacing_below }}"
  {% if white_text %}
    data-text-color="white"
  {% endif %}
  data-product-id="{{ product.id }}"
  data-spacing-above="{{ spacing_above }}"
  data-spacing-below="{{ spacing_below }}"
  aria-hidden="false"
>
  <div class="related-products--wrapper" data-container="section">
    {%- unless title == blank -%}
      <div class="related-products--header" data-container="block">
        <h2
          class="related-products--title"
          data-item="section-heading"
          data-transition-item="viewport"
          data-transition-type="slide-in"
        >
          {{- title -}}
        </h2>
      </div>
    {%- endunless -%}

    <div
      class="related-products--grid"
      data-container="panel"
      data-columns="4"
      data-fixed-columns="true"
      data-mobile-columns="2"
      data-products-container
      {% unless settings.transitions--other %}
        data-transition-container="related-products"
        data-transition-type="fade-in"
        data-transition-cascade="horizontal"
        data-transition-cascade-interval="200"
      {% endunless %}
    >
      {%- for product in recommendations.products limit: max_products -%}
        {%-
          render 'product-card',
          product_item: product,
          transition_id: section.id,
          sizes: '(max-width: 767px) 50vw, 25vw',
          loading: loading
        -%}
      {%- endfor -%}
    </div>
  </div>
</product-recommendations-element>

