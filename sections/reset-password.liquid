{%- liquid
  assign reset_password_title_t = 'customer.reset_password.page_title' | t
  assign reset_password_t = 'customer.reset_password.password' | t
  assign reset_password_confirmation_t = 'customer.reset_password.password_confirmation' | t
  assign reset_password_submit_t = 'customer.reset_password.submit' | t
-%}

<div
  id="customer_reset_password"
  class="customer--root account--reset-password"
  data-container-width="2"
  data-section-id="{{ section.id }}"
  data-background-color="none"
>
  <div class="customer--wrapper">
    <h1
      data-item="section-heading"
      {% unless settings.transitions--text %}
        data-transition-item="viewport"
        data-transition-type="slide-in"
      {% endunless %}
    >
      {{- reset_password_title_t -}}
    </h1>

    {%- form 'reset_customer_password' -%}
      {{- form.errors | default_errors -}}

      <label for="password">
        {{- reset_password_t -}}
      </label>
      <input
        class="text"
        type="password"
        value=""
        name="customer[password]"
        id="customer_password"
        size="16"
      />

      <label for="password_confirmation">
        {{- reset_password_confirmation_t -}}
      </label>
      <input
        class="text"
        type="password"
        value=""
        name="customer[password_confirmation]"
        id="customer_password_confirmation"
        size="16"
      />

      <div class="account--button-container">
        <button
          data-item="button-1"
          data-text="{{- reset_password_submit_t -}}"
          type="submit"
          value="{{ reset_password_submit_t }}"
        >
          <span>{{- reset_password_submit_t -}}</span>
        </button>
      </div>
    {%- endform -%}
  </div>
</div>